# Environment Variables for MNavy API

# Node Environment
NODE_ENV=development

# Application Configuration
APP_NAME=Maritime Navy API
PORT=3000

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_secure
JWT_EXPIRES_IN_DAYS=7

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/mnavy_db?schema=public"

# Azure Storage Configuration (for file uploads)
AZURE_STORAGE_URL=https://yourstorageaccount.blob.core.windows.net
AZURE_STORAGE_ACCESS_KEY=your_storage_account_name
AZURE_STORAGE_SECRET_ACCESS_KEY=your_storage_account_key

# Email Configuration (for notifications - OAuth2)
EMAIL_USER=your_email@gmail.com
EMAIL_CLIENT_ID=your_google_oauth_client_id
EMAIL_CLIENT_SECRET=your_google_oauth_client_secret
EMAIL_REFRESH_TOKEN=your_google_oauth_refresh_token
EMAIL_ACCESS_TOKEN=your_google_oauth_access_token
